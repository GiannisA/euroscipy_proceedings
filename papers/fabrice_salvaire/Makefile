####################################################################################################
#
# LaTeX Makefile
#
####################################################################################################

TEXFILES = $(wildcard figures-*.tex)
PDFFILES = $(patsubst %.tex, %.pdf, ${TEXFILES})

####################################################################################################
#
# Rules
#
####################################################################################################

all: ${PDFFILES}

%.pdf : %.tex
	pdflatex -shell-escape $<

clean:
	-rm *.aux *.auxlock *.dpth *.log *~
	- rm -rf auto

####################################################################################################

.PHONY: all clean

####################################################################################################
#
# End
#
####################################################################################################
